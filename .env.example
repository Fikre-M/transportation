# AI Rideshare Platform Environment Variables

# ========================
# Environment Configuration
# ========================
NODE_ENV=development
VITE_APP_NAME="AI Rideshare Platform"
VITE_APP_VERSION=1.0.0

# ========================
# API Configuration
# ========================
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000
VITE_API_TIMEOUT=10000  # 10 seconds

# ========================
# Authentication
# ========================
VITE_AUTH_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token
VITE_TOKEN_EXPIRY_KEY=token_expiry

# ========================
# AI & ML Services
# ========================
VITE_AI_API_URL=http://localhost:8001/api/ai
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_AI_MODEL=gpt-4-turbo  # Default AI model to use

# Google Gemini AI (Get key from: https://makersuite.google.com/app/apikey)
VITE_GOOGLE_AI_API_KEY=AIzaSyBUvwCw4JaYxXFvNlp5rDulGCEfk1KDwwk
VITE_GOOGLE_AI_MODEL=gemini-2.5-flash

# ========================
# Map Integration
# ========================
VITE_MAPBOX_TOKEN=your_mapbox_access_token_here
VITE_MAP_STYLE=mapbox://styles/mapbox/streets-v11
VITE_DEFAULT_LAT=40.7128  # Default map center
VITE_DEFAULT_LNG=-74.0060
VITE_DEFAULT_ZOOM=12

# ========================
# Payment Gateway
# ========================
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
VITE_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_CURRENCY=usd

# ========================
# Analytics & Monitoring
# ========================
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_LOGGER_LEVEL=debug  # debug, info, warn, error

# ========================
# Feature Flags
# ========================
VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_REAL_TIME_TRACKING=true
VITE_FEATURE_OFFLINE_MODE=false

# ========================
# Performance
# ========================
VITE_API_CACHE_ENABLED=true
VITE_API_CACHE_TTL=300000  # 5 minutes in milliseconds

# ========================
# Security
# ========================
VITE_CSP_ENABLED=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=15  # minutes