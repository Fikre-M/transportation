{
  "name": "transportation-ops-platform",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.2",
    "@mui/icons-material": "^5.15.17",
    "@mui/material": "^5.15.17",
    "@tanstack/react-query": "^5.28.5",
    "axios": "^1.7.9",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.2.5",
    "mapbox-gl": "^3.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^4.0.13",
    "react-helmet-async": "^2.0.4",
    "react-hot-toast": "^2.4.1",
    "react-map-gl": "^7.1.6",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.7",
    "socket.io-client": "^4.7.5",
    "zustand": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "configFile": "./babel.config.cjs"
        }
      ],
      "^.+\\.(css|scss|sass|less)$": "jest-transform-stub",
      "^.+\\.(jpg|jpeg|png|gif|webp|svg)$": "<rootDir>/fileTransformer.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(?!@testing-library/jest-dom|@babel/runtime|@babel/plugin-transform-runtime|@babel/plugin-proposal-class-properties|@babel/plugin-proposal-private-methods|@babel/plugin-proposal-private-property-in-object|@babel/plugin-proposal-nullish-coalescing-operator|@babel/plugin-proposal-optional-chaining|@babel/plugin-syntax-jsx|@babel/plugin-transform-react-jsx|@babel/plugin-transform-react-jsx-self|@babel/plugin-transform-react-jsx-source|@babel/plugin-transform-runtime|@babel/preset-env|@babel/preset-react|@babel/preset-typescript|@emotion/babel-plugin|@emotion/react|@emotion/styled|@mui/material|@mui/icons-material|@mui/styled-engine-sc|@testing-library/dom|@testing-library/react|@testing-library/user-event|@testing-library/react-hooks|react-router-dom|react-router|react-dom|react-is|scheduler|react|react-dom/test-utils|react-test-renderer|scheduler/tracing|use-sync-external-store|@popperjs/core|@tanstack/react-query|react-query|react-query/devtools|react-query/hydration|react-query/persistQueryClient|react-query/useMutation|react-query/useQuery|react-query/useQueryClient|react-query/useQueries|uuid|@emotion/cache|@emotion/sheet|@emotion/weak-memoize|stylis|stylis/rule-sheet|hoist-non-react-statics|@babel/runtime/helpers/esm)/)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.jsx",
      "!src/reportWebVitals.js",
      "!src/setupTests.js",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/**/types.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/__mocks__/**",
      "!src/**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironmentOptions": {
      "url": "http://localhost:3000"
    },
    "globals": {
      "process.env": {
        "NODE_ENV": "test",
        "VITE_API_URL": "http://localhost:3000/api",
        "VITE_WS_URL": "ws://localhost:3000"
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.20.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-numeric-separator": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@babel/runtime-corejs3": "^7.28.4",
    "@eslint/js": "^9.9.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.18",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-css": "^6.0.3",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.0",
    "vite-plugin-pwa": "^0.17.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
